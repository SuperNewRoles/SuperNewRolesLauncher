{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "SuperNewRolesLauncher",
  "version": "0.4.0",
  "identifier": "jp.ykundesu.supernewroleslauncher",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "SuperNewRolesLauncher",
        "visible": false,
        "width": 1100,
        "height": 720
      }
    ],
    "security": {
      "capabilities": ["main-capability"]
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": "nsis",
    "windows": {
      "nsis": {
        "languages": ["Japanese", "English"],
        "displayLanguageSelector": true
      }
    },
    "icon": ["icons/32x32.png", "icons/128x128.png", "icons/icon.ico"]
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/SuperNewRoles/SuperNewRolesLauncher/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDFBNDc0NTEzODE1ODBGRTMKUldUakQxaUJFMFZIR29HdHF4VUg1UlFZaGl2YWsxdU5TbEkyN2trbmFoY1B3c0s0RzVlaU0rbHQK",
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
